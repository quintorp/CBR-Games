package com.borch {	import flash.display.MovieClip;	import flash.events.Event;	import flash.geom.Rectangle;	public class NavGameField extends MovieClip {		private var maxX:int = 0;		private var minX:int = 0;		private var maxY:int = 0;		private var minY:int = 0;		private const STEP_SIZE:int = 15;		public function NavGameField () {			super ();			addEventListener (Event.ADDED_TO_STAGE, init, false, 0, true);		}		private function init (e:Event = null):void {			removeEventListener (Event.ADDED_TO_STAGE, init);			var stageBounds:Rectangle = getBounds (stage);			maxY = int (-stageBounds.y);			minY = int (maxY - stageBounds.height + stage.stageHeight);			maxX = int (-stageBounds.x);			minX = int (maxX - stageBounds.width + stage.stageWidth);		}		public function slideRight (e:Event = null):void {			x = Util.inRange (x + STEP_SIZE, minX, maxX);		}		public function slideLeft (e:Event = null):void {			x = Util.inRange (x - STEP_SIZE, minX, maxX);		}		public function slideUp (e:Event = null):void {			y = Util.inRange (y - STEP_SIZE, minY, maxY);		}		public function slideDown (e:Event = null):void {			y = Util.inRange (y + STEP_SIZE, minY, maxY);		}	}}